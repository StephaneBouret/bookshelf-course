{% extends "base.html.twig" %}

{% block title %}
	Tous nos livres
{% endblock %}

{% block body %}
	<h1>Tous nos livres :</h1>
	<div class="row">
		<div class="col-md-3">
			{% include "partials/_filter.html.twig" %}
		</div>
		<div class="col-md-9 mt-5 mt-md-0">
			<div class="d-flex w-100 mb-2 flex-wrap me-2">
				{% for b in books %}
					<div class="col-md-4">
						{% include "partials/_book_card.html.twig" %}
					</div>
				{% endfor %}
			</div>
		</div>
		<div class="d-flex flex-row-reverse">
			<div class="col-md-9 px-1">
				{{ knp_pagination_render(books) }}
			</div>
		</div>
	</div>
{% endblock %}
